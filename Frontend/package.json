{
  "name": "@context-translator/electron",
  "version": "1.0.0",
  "description": "Context Translator Desktop App",
  "main": "src/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n preload,renderer,main -c yellow,cyan,green \"npm:dev:preload\" \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:preload": "esbuild src/preload.js --bundle --platform=node --format=cjs --outfile=dist-electron/preload.js --external:electron --watch",
    "dev:renderer": "vite",
    "dev:main": "wait-on dist-electron/preload.js http://localhost:5174 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:clean && npm run build:preload && npm run build:renderer && npm run build:main",
    "build:preload": "esbuild src/preload.js --bundle --platform=node --format=cjs --minify --outfile=dist-electron/preload.js --external:electron",
    "build:renderer": "vite build",
    "build:main": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "start": "electron .",
    "clean": "rimraf dist dist-electron",
    "build:clean": "rimraf dist dist-electron || rmdir /s /q dist dist-electron 2>NUL || exit 0",
    "test": "playwright test",
    "test:electron": "playwright test tests/electron",
    "test:components": "playwright test tests/components",
    "test:ui": "playwright test --grep \"UI\"",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:watch": "web-test-runner --watch",
    "test:install": "playwright install"
  },
  "dependencies": {
    "@material/web": "^2.3.0",
    "lit": "^3.3.0",
    "marked": "^15.0.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.1.0",
    "electron-builder": "^24.6.4",
    "esbuild": "^0.25.8",
    "howler": "^2.2.4",
    "lit": "^3.3.0",
    "marked": "^15.0.12",
    "playwright": "^1.55.1",
    "rimraf": "^5.0.5",
    "vite": "^6.3.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.contexttranslator.app",
    "productName": "Context Translator",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/main.js",
      "dist-electron/preload.js",
      "package.json"
    ],
    "win": {
      "sign": false
    },
    "extraMetadata": {
      "main": "src/main.js"
    }
  }
}
