{
  "name": "@context-translator/electron",
  "version": "1.0.0",
  "description": "Context Translator Desktop App",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run build:preload-dev && wait-on http://localhost:5174 && cross-env NODE_ENV=development electron .\"",
    "dev:renderer": "vite",
    "dev:main": "cross-env NODE_ENV=development electron .",
    "build:preload-dev": "esbuild src/preload.js --bundle --platform=node --format=cjs --outfile=dist-electron/preload.js --external:electron",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "electron-builder",
    "start": "electron .",
    "clean": "rimraf dist dist-electron"
  },
  "dependencies": {
    "@context-translator/shared": "file:../shared"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "esbuild": "^0.25.8",
    "vite": "^6.3.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.contexttranslator.app",
    "productName": "Context Translator",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/main.js",
      "dist-electron/preload.js",
      "package.json"
    ],
    "extraMetadata": {
      "main": "src/main.js"
    }
  }
}
